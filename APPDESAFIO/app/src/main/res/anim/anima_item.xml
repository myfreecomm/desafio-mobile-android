<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="280">

    <alpha
        android:fromAlpha="0"
        android:toAlpha="0"
        android:interpolator="@android:anim/decelerate_interpolator"
        />

    <translate
        android:toYDelta="0"
        android:interpolator="@android:anim/decelerate_interpolator"
        android:fromYDelta="-15%"
        />
    <scale
        android:fromXScale="120%"
        android:fromYScale="105%"
        android:toXScale="150%"
        android:toYScale="98%"
        android:pivotX="50%"
        android:pivotY="50%"
        android:interpolator="@android:anim/decelerate_interpolator"
        />

</set>