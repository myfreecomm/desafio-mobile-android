<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="android:textViewStyle">@style/MyTextView</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="DetailsTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/detailsColorPrimaryDark</item>
    </style>

    <style name="MyTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NameTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StockTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PriceTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="RemoveButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/background_outline_white</item>
    </style>


</resources>