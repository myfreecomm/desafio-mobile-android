<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_margin="5dp"
        android:elevation="7dp"
        app:cardCornerRadius="7dp"
        app:cardMaxElevation="7dp"
        app:contentPadding="7dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_pull_request_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/repository_name"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="@color/blue_text"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/img_pull_request_avatar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="16dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tv_pull_request_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:textColor="@color/blue_text"
                android:layout_marginLeft="158dp"
                android:layout_marginTop="0dp"
                app:layout_constraintTop_toBottomOf="@+id/img_pull_request_avatar" />

            <TextView
                android:id="@+id/tv_pull_request_description"
                android:layout_width="0dp"
                android:textColor="@color/color_back"
                android:layout_height="50dp"
                android:text="@string/lorem_lipsum"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="7dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_pull_request_name"
                app:layout_constraintRight_toLeftOf="@+id/img_pull_request_avatar"
                android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.0" />



        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>