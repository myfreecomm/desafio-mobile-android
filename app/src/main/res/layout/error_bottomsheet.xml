<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tvErrorTitle"
        android:layout_marginTop="@dimen/default_margin_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/colorFontBlack"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/error_title_text_size"
        android:text="@string/unexpected_error"
        />

    <TextView
        android:id="@+id/tvErrorDescription"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvErrorTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_16"
        android:layout_marginBottom="@dimen/default_margin_16"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textSize="@dimen/error_body_text_size"
        tools:text="@string/unexpected_error_description"
        />

</androidx.constraintlayout.widget.ConstraintLayout>