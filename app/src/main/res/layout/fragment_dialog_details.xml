<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ui.cart.DetailsDialogFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btn_image_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/ic_close" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/btn_image_close"
                android:text="Product Details"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

<androidx.core.widget.NestedScrollView
    android:id="@+id/nestedScrollView"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:fillViewport="true"
    android:scrollbars="vertical"
    app:layout_constraintTop_toBottomOf="@+id/cardView"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/btnRemoveFromCart"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:src="@drawable/ic_close"/>

    </RelativeLayout>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"
       android:paddingTop="16dp"
       android:paddingStart="16dp"
       android:paddingEnd="16dp"

       >

       <TextView
           android:id="@+id/txtTitle"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           tools:text="Pencil"
           android:layout_alignParentStart="true"
           android:layout_alignParentTop="true"
           android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle"
           android:textColor="@android:color/black"
           android:textStyle="bold"
           />

       <TextView
           android:id="@+id/txtStock"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/txtTitle"
           android:layout_marginTop="4dp"
           android:layout_alignParentStart="true"
           tools:text="in stock" />

       <TextView
           android:id="@+id/txtPrice"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           tools:text="$1.50"
           android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle"
           android:textStyle="bold"
           android:layout_alignParentTop="true"
           android:layout_alignParentEnd="true" />

       <TextView
           android:id="@+id/txtDescription"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="16dp"
           tools:text="Finely crafted graphite wooden pencil. Premium quality lead guarantees at all times. Ideal for artists and designers.\n\nHB hardness only."
           android:layout_below="@+id/txtStock"
           android:textColor="@android:color/black" />

   </RelativeLayout>


</LinearLayout>

</androidx.core.widget.NestedScrollView>


<Button
    android:id="@+id/btnRemoveFromCart"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:padding="16dp"
    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
    android:textAllCaps="true"
    android:text="@string/btn_remove_cart_txt"
    android:textColor="@android:color/black"
    android:textStyle="bold"
    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    />


</androidx.constraintlayout.widget.ConstraintLayout>