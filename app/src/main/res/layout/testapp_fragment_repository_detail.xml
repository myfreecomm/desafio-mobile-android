<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/TestApp_FragmentRepositoryDetail_tvOpen"
        android:background="@color/TestAppGrayLight"
        android:paddingTop="@dimen/TestAppDefaultVerticalMargin"
        android:paddingBottom="@dimen/TestAppDefaultVerticalMargin"
        android:paddingLeft="@dimen/TestAppDefaultHorizontalMargin"
        android:paddingRight="@dimen/TestAppDefaultHorizontalMargin"
        style="@style/TestAppSecondaryTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/TestApp_FragmentRepositoryDetail_rc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/TestApp_FragmentRepositoryDetail_tvOpen"/>

    <TextView
        android:id="@+id/TestApp_FragmentRepositoryDetail_tvError"
        android:layout_centerInParent="true"
        style="@style/TestAppErrorTv"
        />

    <ProgressBar
        android:id="@+id/TestApp_FragmentRepositoryDetail_progressBar"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:indeterminate="true"
        android:layout_centerInParent="true"
        />

</RelativeLayout>