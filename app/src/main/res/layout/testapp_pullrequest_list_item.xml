<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/TestAppListItemHeight"
    android:paddingLeft="@dimen/TestAppDefaultHorizontalMargin"
    android:paddingRight="@dimen/TestAppDefaultHorizontalMargin"
    android:paddingTop="@dimen/TestAppDefaultVerticalMargin"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/TestApp_PullRequestListItem_tvName"
        style="@style/TestAppItemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="@dimen/TestAppDefaultHorizontalMargin"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="name" />

    <TextView
        android:id="@+id/TestApp_PullRequestListItem_tvDescription"
        style="@style/TestAppDefaultText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="left|top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TestApp_PullRequestListItem_tvName"
        android:layout_marginTop="@dimen/TestAppDefaultVerticalMarginHalf"
        android:ellipsize="end"
        android:maxLines="2" />

    <ImageView
        android:id="@+id/TestApp_PullRequestListItem_ivUser"
        android:layout_width="@dimen/TestAppListItemImageSize"
        android:layout_height="@dimen/TestAppListItemImageSize"
        android:layout_marginTop="@dimen/TestAppDefaultVerticalMarginHalf"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TestApp_PullRequestListItem_tvDescription"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/TestApp_PullRequestListItem_tvUser"
        style="@style/TestAppSmallTitle"
        app:layout_constraintTop_toTopOf="@+id/TestApp_PullRequestListItem_ivUser"
        app:layout_constraintBottom_toBottomOf="@+id/TestApp_PullRequestListItem_ivUser"
        app:layout_constraintLeft_toRightOf="@+id/TestApp_PullRequestListItem_ivUser"

        android:layout_marginLeft="@dimen/TestAppDefaultHorizontalMargin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user name" />

    <View
        android:id="@+id/TestApp_PullRequestListItem_vLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/TestItemLineColor" />

</android.support.constraint.ConstraintLayout>