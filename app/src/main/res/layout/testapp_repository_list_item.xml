<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/TestApp_FragmentRepositoryListItem_cvMain"
    android:layout_width="match_parent"
    android:layout_height="@dimen/TestAppListItemHeight"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/TestAppDefaultHorizontalMargin"
    android:paddingRight="@dimen/TestAppDefaultHorizontalMargin"
    android:paddingTop="@dimen/TestAppDefaultVerticalMargin"
    android:weightSum="10">

    <TextView
        android:id="@+id/TestApp_FragmentRepositoryListItem_tvName"
        style="@style/TestAppItemTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/TestApp_FragmentRepositoryListItem_llOwner"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="@dimen/TestAppDefaultHorizontalMargin"
        android:text="name" />

    <TextView
        android:id="@+id/TestApp_FragmentRepositoryListItem_tvDescription"
        style="@style/TestAppDefaultText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="left|top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/TestApp_FragmentRepositoryListItem_llOwner"
        app:layout_constraintTop_toBottomOf="@+id/TestApp_FragmentRepositoryListItem_tvName"
        android:layout_marginTop="@dimen/TestAppDefaultVerticalMarginHalf"
        android:layout_marginBottom="@dimen/TestAppDefaultVerticalMarginHalf"
        android:maxLines="3"
        android:ellipsize="end"
        app:layout_constraintBottom_toTopOf="@+id/TestApp_FragmentRepositoryListItem_tvForks"
        android:text="description asdasdasdasdasd asdasdasdasdasd asdasdasdasdasd asdasdasdasdasd asdasdasdasdasd asdasdasdasdasd asdasdasdasdasd" />

    <TextView
        android:id="@+id/TestApp_FragmentRepositoryListItem_tvForks"
        style="@style/TestAppYellowText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/TestAppDefaultVerticalMargin"
        android:drawableLeft="@drawable/fork"
        app:layout_constraintBottom_toTopOf="@+id/TestApp_FragmentRepositoryListItem_vLine"
        android:text="Forks" />

    <TextView
        android:id="@+id/TestApp_FragmentRepositoryListItem_tvStars"
        style="@style/TestAppYellowText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/star"
        app:layout_constraintBottom_toTopOf="@+id/TestApp_FragmentRepositoryListItem_vLine"
        app:layout_constraintLeft_toRightOf="@+id/TestApp_FragmentRepositoryListItem_tvForks"
        android:layout_marginBottom="@dimen/TestAppDefaultVerticalMargin"
        android:paddingLeft="@dimen/TestAppDefaultHorizontalMargin"
        android:text="Stars" />

    <View
        android:id="@+id/TestApp_FragmentRepositoryListItem_vLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/TestItemLineColor" />

    <LinearLayout
        android:id="@+id/TestApp_FragmentRepositoryListItem_llOwner"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/TestApp_FragmentRepositoryListItem_ivOwner"
            android:layout_width="@dimen/TestAppListItemImageSize"
            android:layout_height="@dimen/TestAppListItemImageSize"
            android:layout_marginBottom="@dimen/TestAppDefaultVerticalMargin"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/TestApp_FragmentRepositoryListItem_tvOwnerName"
            style="@style/TestAppSmallTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user name" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>