<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorPrimaryVariant">@color/primaryColorVariant</item>
        <item name="android:textColorPrimary">@color/colorOnPrimary</item>
        <item name="android:textColor">@color/androidTextColor</item>
    </style>

    <style name="LabelDark" parent="AppTheme">
        <item name="android:textColor">@color/colorOnSecondary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LabelLight" parent="AppTheme">
        <item name="android:textColor">@color/androidTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>